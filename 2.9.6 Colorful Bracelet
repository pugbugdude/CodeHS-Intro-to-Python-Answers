speed(10)
penup()
setposition(0,-50)
pendown()
def bracelet():
    for i in range(12):
        begin_fill()
        pendown()
        color("blue")
        circle(10)
        penup()
        left(10)
        end_fill()
        begin_fill()
        forward(15)
        pendown()
        color("red")
        circle(10)
        penup()
        left(10)
        end_fill()
        begin_fill()
        forward(15)
        pendown()
        color("purple")
        circle(10)
        penup()
        left(10)
        forward(15)
        end_fill()
bracelet()
